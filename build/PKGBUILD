#pkgbase=linux               # Build stock -ARCH kernel
pkgbase=linux-surface4      # Build kernel with a different name
_srcname=linux-4.15.7
pkgver=4.15.7
pkgrel=1
arch=('x86_64')
url="https://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'kmod' 'inetutils' 'bc' 'libelf')
options=('!strip')
source=(
